

    <div class="col-md-4">
      <div class="card p-3 mb-5 text-secondary">
        <div class="d-flex justify-content-between">
          <div class="d-flex flex-row align-items-center">
            <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
            <div class="ms-2 c-details">
              <h6 class="mb-0">Loan Amount</h6> <span><strong><%= loan.loan_amt %></strong></span>
            </div>
          </div>
          <div class="badge text-primary"> <span><%= loan.total_loan_period %> Months</span> </div>
        </div>
        <div class="mt-2">
          <h3 class="heading">Total Loan Payment<br><%= loan.total_payment %></h3>
          <div class="mt-1">
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width: <%=30%>%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="mt-3"> <span class="text1"><%= loan.monthly_emi %> per Month emi<span class="text2">Date of Payment <%= loan.monthly_payment_date %></span></span> </div>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <div class="d-flex flex-row align-items-center">
            <div class="ms-2 c-details">
              <%= link_to "Payment history", loan %>
            </div>
          </div>
          <div class="badge"> <%= link_to "Pay this loan", loan, class: "btn btn-primary" %> </div>
        </div>
      </div>
    </div>
