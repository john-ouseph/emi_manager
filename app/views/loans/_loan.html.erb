

    <div class="col-md-4">
      <div class="card p-3 mb-5 text-secondary">
        <div class="d-flex justify-content-between">
          <div class="d-flex flex-row align-items-center">
            <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
            <div class="ms-2 c-details">
              <h6 class="mb-0">Loan Amount</h6> <span><strong><%= loan.loan_amt %></strong></span>
            </div>
          </div>
          <div class="badge text-primary"> <span><%= loan.total_loan_period %> Months</span> </div>
        </div>
        <div class="mt-2">
          <h3 class="heading">Total Loan Payment<br><%= loan.total_payment %></h3>
          <div class="mt-1">
            <div class="progress">
              <% total_paid_amt = loan.total_paid_amt.nil? ? 0 : loan.total_paid_amt
                 total_payment = loan.total_payment.nil? ? 0 : loan.total_payment
                  progress_percentage = total_paid_amt / total_payment * 100   %>
              <div class="progress-bar" role="progressbar" style="width: <%= progress_percentage %>%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="mt-3"> <span class="text1"><%= loan.monthly_emi %> per Month,<span class="text2">Date of Payment <%= loan.monthly_payment_date %></span></span> </div>
            <div class="mt-3"> <span class="text1">Paid <%= progress_percentage %>% of total amount ,<span class="text2"> Paid <%= loan.emi_payments_count %> Emis</span></span> </div>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <div class="d-flex flex-row align-items-center">
            <div class="ms-3 c-details">
              <%= link_to "Payment history", loan_emi_payments_path(loan) %>
            </div>
            <div class="badge ms-2 c-details">
              <%= button_to "Delete", loan, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="badge"> <%= link_to "Pay this loan", new_loan_emi_payment_path(loan), class: "btn btn-primary" %> </div>
        </div>
      </div>
    </div>
