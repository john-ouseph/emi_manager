<%= form_with model: [@loan, emi_payment], local: true, class: "row g-3 align-items-center" do |form| %>
  <% if emi_payment.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(emi_payment.errors.count, "error") %> prohibited this loan from being saved:</h2>

    <ul>
      <% emi_payment.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="col-md-4">
    <div class="form-outline">
      <%= form.text_field :paid_emi_amt, class: "form-control", placeholder: :emi_amount %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-outline">
      <%= form.text_field :emi_amt, class: "form-control", placeholder: :actual_emi_amount %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-outline">
      <%= form.text_field :principal_amt, class: "form-control", placeholder: :principal_amount %>
    </div>
  </div>

  <div class="col-md-6">
    <%= submit_tag 'Clear ', type: 'reset', class: "btn btn-secondary"%>
  </div>
  <div class="col-md-6">
    <%= form.submit 'Pay Emi', class: "btn btn-primary btn-center"%>
  </div>
  <% end %>
