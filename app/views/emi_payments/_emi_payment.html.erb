<div class="card">
  <div class="row">
    <div class="col-md-2 text-center">
      <%= emi_payment.emi_amt %>
    </div>
    <div class="col-md-2 text-center">
      <%= emi_payment.paid_emi_amt %>
    </div>
    <div class="col-md-2 text-center">
      <%= emi_payment.principal_amt %>
    </div>
    <div class="col-md-2 text-center">
      <%= emi_payment.intrest_amt %>
    </div>
    <div class="col-md-2 text-center">
      <%= emi_payment.loan.total_payment %>
    </div>
    <div class="col-md-2">
      <div class="d-flex justify-content-center">
        <%= link_to '', edit_loan_emi_payment_path(@loan, emi_payment), class: "btn bi bi-pencil",data: {toggle: 'tooltip'}, 'data-bs-placement': "bottom", 'title': "Edit Payment" %>
        <%= button_to '', [@loan, emi_payment], method: :delete, data: {confirm: 'Are you sure?',  toggle: 'tooltip'}, class: "btn bi bi-basket", 'data-bs-placement': "bottom", 'title': "Delete Payment"%>
      </div>
    </div>
  </div>
</div>
